@using NooSphere.Core.ActivityModel
@using Action = NooSphere.Core.ActivityModel.Action
@{
    ViewBag.Title = "Extend the Activity Model";

    var u = new User();
    u.Name = "My Name";
    u.Email = "my@email.com";
    u.Id = Guid.NewGuid();
    var u2 = new User();
    u2.Name = "Friends Name";
    u2.Email = "friend@email.com";
    u2.Id = Guid.NewGuid();
    u.Friends.Add(u2);

    var act = new Activity();
    act.Name = "My activity";
    act.Id = Guid.NewGuid();
    act.Owner = u;

    var a = new Action();
    a.Name = "My action";
    a.Id = Guid.NewGuid();

    var r = new Resource();
    r.Name = "My resource";
    r.Id = Guid.NewGuid();
    r.ActionId = a.Id;
    r.ActivityId = act.Id;
    r.Size = 34325;
    r.CreationTime = DateTime.UtcNow.ToString("u");
    r.LastWriteTime = DateTime.UtcNow.ToString("u");
}
<section class="content-wrapper main-content clear-fix">
    <h3>Extend the Activity Model</h3>
    <hgroup>
        <p>
            The activity model is really simple and can be extended to include the properties that fits your system. The following are the base classes, that are used in Activity Cloud.
        </p>
        <p>Action example in JSON:</p>
        <p style="background: #fff; margin: auto auto; padding: 5px; width: 80%;">
            <code style="font-weight: bold;">
                @Html.Partial("FormattedJson", a)
            </code>
        </p>
        <p>Activity example in JSON:</p>
        <p style="background: #fff; margin: auto auto; padding: 5px; width: 80%;">
            <code style="font-weight: bold;">
                @Html.Partial("FormattedJson", act)
            </code>
        </p>
        <p>Resource example in JSON:</p>
        <p style="background: #fff; margin: auto auto; padding: 5px; width: 80%;">
            <code style="font-weight: bold;">
                @Html.Partial("FormattedJson", r)
            </code>
        </p>
        <p>User example in JSON:</p>
        <p style="background: #fff; margin: auto auto; padding: 5px; width: 80%;">
            <code style="font-weight: bold;">
                @Html.Partial("FormattedJson", u)
            </code>
        </p>
    </hgroup>
</section>